@model IEnumerable<GalaxyDecor.BusinessLibrary.BusinessObjects.MembersInformation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ALL Members</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SponsorshipNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoiningDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonalPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonalMobile)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SponsorshipNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @item.JoiningDate.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonalPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonalMobile)
        </td>        
        <td>
            @Html.ActionLink("Edit", "Edit", new { memberID=item.MembershipNo }) |
            @Html.ActionLink("Details", "Details", new { memberID=item.MembershipNo }) |
            @Html.ActionLink("Delete", "Delete", new { memberID=item.MembershipNo })
        </td>
    </tr>
}

</table>
